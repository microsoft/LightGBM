{
    "root": false,
    "extends": "//",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "useEditorconfig": true,
        "lineWidth": 120
    },
    "assist": {
        "enabled": true,
        "actions": {
            "recommended": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": "warning"
        }
    }
}
